<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ResumeAI - Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
        rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body class="h-full">
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-content">
            <div class="loading-spinner-container">
                <div class="loading-spinner"></div>
            </div>
            <div>
                <p class="loading-text">Logging you in...</p>
                <p class="loading-subtext">Please wait while we verify your credentials</p>
            </div>
        </div>
    </div>
    <div class="min-h-full flex">
        <!-- Left Panel - Decorative -->
        <div class="hidden lg:flex lg:w-1/2 relative bg-gradient-to-br from-primary-50 to-[#F0FFF4]">
            <div class="absolute inset-0 geometric-pattern opacity-50"></div>
            <div class="relative w-full flex items-center justify-center p-12">
                <!-- Floating Elements -->
                <div class="absolute top-1/4 left-1/4 w-20 h-20 rounded-full bg-primary-500/10 floating"></div>
                <div class="absolute bottom-1/4 right-1/4 w-32 h-32 rounded-full bg-secondary-500/10 floating" style="animation-delay: 0.2s"></div>
                
                <!-- Main Content -->
                <div class="text-center">
                    <div class="mb-8">
                        <span class="text-3xl font-bold font-display gradient-text">ResumeAI</span>
                    </div>
                    <h2 class="text-2xl font-display font-bold text-gray-900 mb-4">
                        Your AI-Powered Job Search Assistant
                    </h2>
                    <p class="text-gray-600 max-w-md mx-auto">
                        Join thousands of job seekers using AI to optimize their applications and land their dream jobs faster.
                    </p>
                </div>
            </div>
        </div>

        <!-- Right Panel - Form -->
        <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-20 xl:px-24 bg-gradient-to-br from-white to-primary-50/30">
            <div class="mx-auto w-full max-w-sm">
                <!-- Logo for mobile -->
                <div class="lg:hidden text-center mb-8">
                    <span class="text-3xl font-bold font-display gradient-text">ResumeAI</span>
                </div>

                <!-- Enhanced Form Tabs with better visual feedback -->
                <div class="flex justify-center space-x-6 mb-8" role="tablist" aria-label="Authentication forms">
                    <button id="login-tab" 
                        class="pb-2 text-lg font-medium text-gray-900 border-b-2 border-primary-500 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2" 
                        role="tab" 
                        aria-selected="true"
                        aria-controls="login-panel">
                        Log In
                    </button>
                    <button id="signup-tab" 
                        class="pb-2 text-lg font-medium text-gray-400 border-b-2 border-transparent hover:text-gray-500 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2" 
                        role="tab" 
                        aria-selected="false"
                        aria-controls="signup-panel">
                        Sign Up
                    </button>
                </div>

                <!-- Enhanced Login Form -->
                <div id="login-panel" role="tabpanel" aria-labelledby="login-tab">
                    <form class="space-y-6" action="/auth/login" method="POST" novalidate>
                        <!-- Add error message container -->
                        <div id="login-error" class="hidden rounded-md bg-red-50 p-4 mb-4" role="alert">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-red-800" id="login-error-text"></p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-1">
                            <label for="login-email" class="block text-sm font-medium text-gray-700">
                                Email address
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                    </svg>
                                </div>
                                <input type="email" 
                                    id="login-email" 
                                    name="email" 
                                    required 
                                    autocomplete="email"
                                    placeholder="you@example.com"
                                    class="pl-10 block w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition-colors duration-200
                                    focus:ring-2 focus:ring-primary-500 focus:border-primary-500
                                    hover:border-gray-400
                                    peer"
                                    aria-describedby="email-error">
                            </div>
                            <p class="hidden peer-invalid:block text-sm text-red-600 mt-1" id="email-error">
                                Please enter a valid email address
                            </p>
                        </div>

                        <div class="space-y-1">
                            <label for="login-password" class="block text-sm font-medium text-gray-700">
                                Password
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                    </svg>
                                </div>
                                <input type="password" 
                                    id="login-password" 
                                    name="password" 
                                    required 
                                    autocomplete="current-password"
                                    placeholder="••••••••"
                                    minlength="8"
                                    class="pl-10 block w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition-colors duration-200
                                    focus:ring-2 focus:ring-primary-500 focus:border-primary-500
                                    hover:border-gray-400
                                    peer">
                                <button type="button" 
                                    class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600"
                                    onclick="togglePasswordVisibility(this)"
                                    aria-label="Toggle password visibility">
                                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                </button>
                            </div>
                            <p class="hidden peer-invalid:block text-sm text-red-600 mt-1" id="password-error">
                                Password must be at least 8 characters
                            </p>
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                    <input type="checkbox" 
                                        id="remember-me" 
                                    class="h-4 w-4 text-primary-500 border-gray-300 rounded focus:ring-primary-500 transition-colors duration-200">
                                <label for="remember-me" class="ml-2 block text-sm text-gray-700">
                                        Remember me
                                    </label>
                                </div>
                            <a href="#" class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors duration-200">
                                Forgot password?
                            </a>
                        </div>

                        <button type="submit" 
                            class="relative w-full py-3 px-4 bg-primary-600 text-white font-medium rounded-lg 
                            transition-all duration-200
                            hover:bg-primary-700 
                            focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500
                            disabled:opacity-50 disabled:cursor-not-allowed
                            group">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 hidden group-disabled:flex">
                                <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                            </span>
                            <span class="group-disabled:opacity-0">Log In</span>
                        </button>
                    </form>
                </div>

                <!-- Sign Up Form (hidden by default) -->
                <div id="signup-panel" role="tabpanel" aria-labelledby="signup-tab" class="hidden">
                    <form class="space-y-6" action="/auth/signup" method="POST" enctype="application/x-www-form-urlencoded">
                        <div>
                            <label for="signup-name" class="block text-sm font-medium text-gray-700">
                                Full name
                            </label>
                            <input type="text" 
                                id="signup-name" 
                                name="name" 
                                required 
                                class="mt-1 block w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        </div>

                        <div>
                            <label for="signup-email" class="block text-sm font-medium text-gray-700">
                                Email address
                            </label>
                            <input type="email" 
                                id="signup-email" 
                                name="email" 
                                required 
                                class="mt-1 block w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        </div>

                        <div>
                            <label for="signup-password" class="block text-sm font-medium text-gray-700">
                                Password
                            </label>
                            <input type="password" 
                                id="signup-password" 
                                name="password" 
                                required 
                                class="mt-1 block w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        </div>

                        <div class="flex items-center">
                            <input type="checkbox" 
                                id="terms" 
                                required
                                class="h-4 w-4 text-primary-500 border-gray-300 rounded focus:ring-primary-500">
                            <label for="terms" class="ml-2 block text-sm text-gray-700">
                                I agree to the <a href="#" class="text-primary-600 hover:text-primary-500">Terms</a> and 
                                <a href="#" class="text-primary-600 hover:text-primary-500">Privacy Policy</a>
                            </label>
                        </div>

                        <button type="submit" 
                            class="cta-button w-full py-3 px-4 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                            Create Account
                        </button>
                    </form>
                </div>

                <!-- Enhanced Social Login -->
                <div class="mt-8">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-gradient-to-br from-white to-primary-50/30 text-gray-500">
                                Or continue with
                            </span>
                        </div>
                    </div>

                    <div class="mt-6 grid grid-cols-2 gap-4">
                        <button class="group relative flex justify-center items-center px-4 py-3 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 
                            transition-all duration-200
                            hover:bg-gray-50 hover:border-gray-400
                            focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
                                <svg class="h-5 w-5 transition-transform duration-200 group-hover:scale-110" viewBox="0 0 24 24">
                                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                                </svg>
                            </span>
                            <span class="ml-6">Google</span>
                        </button>
                        <button class="group relative flex justify-center items-center px-4 py-3 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 
                            transition-all duration-200
                            hover:bg-gray-50 hover:border-gray-400
                            focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
                                <svg class="h-5 w-5 text-[#1877F2] transition-transform duration-200 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
                                </svg>
                            </span>
                            <span class="ml-6">Facebook</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.querySelector('form[action="/auth/login"]');
            const loadingOverlay = document.getElementById('loadingOverlay');
            const loginError = document.getElementById('login-error');
            const loginErrorText = document.getElementById('login-error-text');

            // Function to show loading overlay
            function showLoading() {
                loadingOverlay.classList.add('active');
            }

            // Function to hide loading overlay
            function hideLoading() {
                loadingOverlay.classList.remove('active');
            }

            // Function to show error message
            function showError(message) {
                loginError.classList.remove('hidden');
                loginErrorText.textContent = message;
                loginError.classList.add('show');
            }

            // Function to hide error message
            function hideError() {
                loginError.classList.add('hidden');
                loginError.classList.remove('show');
                loginErrorText.textContent = '';
            }

            if (loginForm) {
                loginForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    hideError();

                    const formData = new FormData(loginForm);
                    const email = formData.get('email');
                    const password = formData.get('password');

                    // Basic validation
                    if (!email || !password) {
                        showError('Please fill in all fields');
                        return;
                    }

                    showLoading();

                    try {
                        const response = await fetch('/auth/login', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                email: email,
                                password: password
                            })
                        });

                        const data = await response.json();

                        if (response.ok) {
                            // Successful login - redirect to dashboard
                            window.location.href = '/dashboard';
                        } else {
                            // Handle error
                            hideLoading();
                            showError(data.message || 'Invalid email or password');
                        }
                    } catch (error) {
                        hideLoading();
                        showError('An error occurred. Please try again.');
                    }
                });
            }

            // Handle tab switching
            const loginTab = document.getElementById('login-tab');
            const signupTab = document.getElementById('signup-tab');
            const loginPanel = document.getElementById('login-panel');
            const signupPanel = document.getElementById('signup-panel');

            loginTab.addEventListener('click', function() {
                loginPanel.classList.remove('hidden');
                signupPanel.classList.add('hidden');
                loginTab.classList.add('border-primary-500', 'text-gray-900');
                loginTab.classList.remove('text-gray-400', 'border-transparent');
                signupTab.classList.remove('border-primary-500', 'text-gray-900');
                signupTab.classList.add('text-gray-400', 'border-transparent');
            });

            signupTab.addEventListener('click', function() {
                signupPanel.classList.remove('hidden');
                loginPanel.classList.add('hidden');
                signupTab.classList.add('border-primary-500', 'text-gray-900');
                signupTab.classList.remove('text-gray-400', 'border-transparent');
                loginTab.classList.remove('border-primary-500', 'text-gray-900');
                loginTab.classList.add('text-gray-400', 'border-transparent');
            });
        });

        // Password visibility toggle function
        function togglePasswordVisibility(button) {
            const input = button.parentElement.querySelector('input');
            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
            input.setAttribute('type', type);
            
            // Update icon
            const svg = button.querySelector('svg');
            if (type === 'text') {
                svg.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                `;
            } else {
                svg.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                `;
            }
        }
    </script>
</body>
</html>