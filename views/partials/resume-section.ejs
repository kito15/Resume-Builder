<div class="resume-section">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <small class="text-muted small-text">Pages / My Resumes</small>
            <h4 class="fw-bold mb-0">My Resumes</h4>
        </div>
        <div class="d-flex gap-3">
            <button class="btn btn-primary" id="uploadResumeBtn">
                <i class="fas fa-plus me-2"></i>Upload Resume
            </button>
            <div class="dropdown">
                <button class="btn btn-light" data-bs-toggle="dropdown">
                    <i class="fas fa-sort me-2"></i>Sort
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Date Modified</a></li>
                    <li><a class="dropdown-item" href="#">Name</a></li>
                    <li><a class="dropdown-item" href="#">ATS Score</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Upload Area (initially hidden) -->
    <div class="upload-area mb-4 d-none" id="uploadArea">
        <div class="upload-zone p-4 text-center">
            <i class="fas fa-cloud-upload-alt fs-1 mb-3"></i>
            <h5 class="fw-bold">Drag and drop your resume</h5>
            <p class="text-muted small-text mb-3">or</p>
            <label class="btn btn-outline-primary mb-3" for="resumeFile">
                Choose File
            </label>
            <input type="file" id="resumeFile" class="d-none" accept=".pdf,.doc,.docx">
            <p class="text-muted small-text">Supported formats: PDF, DOC, DOCX (Max 5MB)</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row g-4">
        <!-- Resume List -->
        <div class="col-lg-8">
            <div class="resume-list">
                <!-- Resume Item -->
                <div class="resume-item p-3 mb-3">
                    <div class="d-flex align-items-center">
                        <div class="resume-icon me-3">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="fw-bold mb-0">Software Engineer Resume</h6>
                                <span class="badge bg-success">ATS Score: 92%</span>
                            </div>
                            <div class="d-flex align-items-center text-muted small-text">
                                <span class="me-3">
                                    <i class="fas fa-clock me-1"></i>Modified 2 days ago
                                </span>
                                <span>
                                    <i class="fas fa-code-branch me-1"></i>3 versions
                                </span>
                            </div>
                        </div>
                        <div class="resume-actions ms-3">
                            <button class="btn btn-light btn-sm" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-light btn-sm" title="Download">
                                <i class="fas fa-download"></i>
                            </button>
                            <button class="btn btn-light btn-sm" title="More">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- More resume items would follow -->
            </div>
        </div>

        <!-- Template Preview -->
        <div class="col-lg-4">
            <div class="template-section">
                <h5 class="fw-bold mb-3">Resume Templates</h5>
                <div class="template-grid">
                    <div class="template-item active">
                        <img src="https://placehold.co/200x280" alt="Modern Template" class="img-fluid mb-2">
                        <h6 class="small-text fw-bold mb-0">Modern</h6>
                    </div>
                    <div class="template-item">
                        <img src="https://placehold.co/200x280" alt="Professional Template" class="img-fluid mb-2">
                        <h6 class="small-text fw-bold mb-0">Professional</h6>
                    </div>
                    <!-- More templates -->
                </div>
            </div>
        </div>
    </div>
</div> 