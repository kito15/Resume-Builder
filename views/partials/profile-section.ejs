<div class="profile-section">
    <!-- Profile Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <small class="text-muted small-text">Pages / Profile</small>
            <h4 class="fw-bold mb-0">My Profile</h4>
        </div>
        <button class="btn btn-primary" id="saveProfileBtn">Save Changes</button>
    </div>

    <!-- Profile Summary -->
    <div class="bg-white p-4 rounded-3 mb-4">
        <div class="d-flex flex-wrap align-items-center gap-4">
            <div class="position-relative">
                <img src="https://placehold.co/120x120" alt="Profile Picture" 
                     class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                <div class="position-absolute bottom-0 end-0">
                    <label for="avatar-upload" class="btn btn-sm btn-light rounded-circle shadow-sm" 
                           style="width: 32px; height: 32px;">
                        <i class="fas fa-camera"></i>
                    </label>
                    <input type="file" id="avatar-upload" class="d-none">
                </div>
            </div>
            <div class="flex-grow-1">
                <h5 class="fw-bold mb-1">John Doe</h5>
                <p class="text-muted mb-2">Software Engineer</p>
                <p class="small-text mb-0">
                    <i class="fas fa-map-marker-alt me-1"></i> San Francisco, CA
                </p>
            </div>
        </div>
    </div>

    <!-- Profile Details -->
    <div class="row g-4">
        <!-- Personal Information -->
        <div class="col-lg-8">
            <div class="bg-white p-4 rounded-3">
                <h5 class="fw-bold mb-3">Personal Information</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" value="John">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" value="Doe">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="john.doe@example.com">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input type="tel" class="form-control" value="+1 (555) 123-4567">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Bio</label>
                        <textarea class="form-control" rows="3">Experienced software engineer with a passion for building scalable applications.</textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Settings -->
        <div class="col-lg-4">
            <div class="bg-white p-4 rounded-3 mb-4">
                <h5 class="fw-bold mb-3">Account Settings</h5>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h6 class="mb-1">Two-Factor Auth</h6>
                        <small class="text-muted">Enable 2FA security</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch">
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Email Notifications</h6>
                        <small class="text-muted">Receive job alerts</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" checked>
                    </div>
                </div>
            </div>

            <div class="bg-white p-4 rounded-3">
                <h5 class="fw-bold mb-3">Security</h5>
                <button class="btn btn-outline-primary w-100 mb-2">
                    Change Password
                </button>
                <button class="btn btn-outline-danger w-100">
                    Delete Account
                </button>
            </div>
        </div>
    </div>
</div> 