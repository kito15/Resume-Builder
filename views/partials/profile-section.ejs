<div class="profile-section px-4">
    <!-- Profile Header - More compact -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <div class="d-flex align-items-center gap-2 mb-1">
                <a href="#" class="text-decoration-none text-muted small-text">Pages</a>
                <i class="fas fa-chevron-right small-text text-muted"></i>
                <span class="text-primary small-text">Profile</span>
            </div>
            <h4 class="fw-bold mb-0">My Profile</h4>
        </div>
        <button class="btn btn-primary btn-sm px-4" id="saveProfileBtn">
            <i class="fas fa-save me-2"></i>Save Changes
        </button>
    </div>

    <!-- Profile Summary - Reduced spacing -->
    <div class="profile-summary mb-4 pb-3 border-bottom">
        <div class="d-flex flex-wrap align-items-center gap-3">
            <div class="position-relative">
                <div class="profile-image-container">
                    <img src="https://placehold.co/100x100" alt="Profile Picture" 
                         class="rounded-circle profile-image">
                    <label for="avatar-upload" class="profile-image-upload" 
                           title="Upload new photo">
                        <i class="fas fa-camera"></i>
                    </label>
                    <input type="file" id="avatar-upload" class="d-none" 
                           accept="image/*">
                </div>
            </div>
            <div class="flex-grow-1">
                <h5 class="fw-bold mb-1">John Doe</h5>
                <div class="d-flex align-items-center gap-3 text-muted">
                    <span class="d-flex align-items-center small-text">
                        <i class="fas fa-briefcase me-1"></i>Software Engineer
                    </span>
                    <span class="separator small-text">â€¢</span>
                    <span class="d-flex align-items-center small-text">
                        <i class="fas fa-map-marker-alt me-1"></i>San Francisco, CA
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Profile Details - Compact grid -->
    <div class="row g-4">
        <!-- Personal Information -->
        <div class="col-lg-8">
            <section class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-user-circle text-primary me-2"></i>
                    <h5 class="fw-bold mb-0">Personal Information</h5>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label text-muted small-text">First Name</label>
                            <input type="text" class="form-control" value="John">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label text-muted small-text">Last Name</label>
                            <input type="text" class="form-control" value="Doe">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label text-muted small-text">Email</label>
                            <input type="email" class="form-control" value="john.doe@example.com">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label text-muted small-text">Phone</label>
                            <input type="tel" class="form-control" value="+1 (555) 123-4567">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label text-muted small-text">Bio</label>
                            <textarea class="form-control" rows="3" 
                                    placeholder="Tell us about yourself">Experienced software engineer with a passion for building scalable applications.</textarea>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Account Settings -->
        <div class="col-lg-4">
            <section class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-cog text-primary me-2"></i>
                    <h5 class="fw-bold mb-0">Account Settings</h5>
                </div>
                <div class="settings-list">
                    <div class="setting-item">
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <h6 class="mb-0 small-text">Two-Factor Authentication</h6>
                                <p class="text-muted smaller-text mb-0">Enable 2FA security</p>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch">
                            </div>
                        </div>
                    </div>
                    <div class="setting-item">
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <h6 class="mb-0 small-text">Email Notifications</h6>
                                <p class="text-muted smaller-text mb-0">Receive job alerts</p>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" checked>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section>
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-shield-alt text-primary me-2"></i>
                    <h5 class="fw-bold mb-0">Security</h5>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2">
                        <i class="fas fa-key"></i>Change Password
                    </button>
                    <button class="btn btn-outline-danger d-flex align-items-center justify-content-center gap-2">
                        <i class="fas fa-trash-alt"></i>Delete Account
                    </button>
                </div>
            </section>
        </div>
    </div>
</div> 